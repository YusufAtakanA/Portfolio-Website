<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= data.personal.name %> | Portfolio</title>
  <link rel="stylesheet" href="/css/style.css" />

  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2DhKN+5zF+1/dLRVXKjcY2T4qK9Uw90Gd7mdm1z6qZLgu5z8pu+H0Zq6ZRG6r7v9A=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
</head>
<body>
  <%- include('partials/header') %>

  <section id="home" class="hero">
    <div class="hero-content">
      <h1>Hi, I’m <span class="highlight"><%= data.personal.name %></span>.</h1>
      <p class="subtitle">I build web experiences that delight users.</p>
      <a href="#projects" class="cta-btn">View My Work</a>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="section about-section">
    <h2>About Me</h2>
    <div class="about-content">
      <div class="profile-pic">
        <img src="<%= data.personal.profileImage %>" alt="<%= data.personal.name %> profile" />
      </div>
      <div class="about-text">
        <p><%= data.personal.bio %></p>
        <p>Location: <%= data.personal.location %></p>
        <p>Contact: <a href="mailto:<%= data.personal.email %>"><%= data.personal.email %></a></p>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="section projects-section">
    <h2>Projects</h2>
    <div class="projects-grid">
      <% data.projects.forEach((project) => { %>
        <div class="project-card">
          <h3><%= project.title %></h3>
          <p><%= project.description %></p>
          <p class="tech-stack">Technologies: <%= project.technologies.join(', ') %></p>
          <a href="<%= project.link %>" target="_blank" class="project-link">View Project</a>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="section skills-section">
    <h2>Skills</h2>
    <div class="skills-grid">
      <div>
        <h3>Programming Languages</h3>
        <ul>
          <% data.skills.programmingLanguages.forEach(lang => { %>
            <li><i class="fas fa-code"></i> <%= lang %></li>
          <% }); %>
        </ul>
      </div>
      <div>
        <h3>Frameworks & Tools</h3>
        <ul>
          <% data.skills.frameworks.forEach(framework => { %>
            <li><i class="fas fa-laptop-code"></i> <%= framework %></li>
          <% }); %>
          <% data.skills.tools.forEach(tool => { %>
            <li><i class="fas fa-tools"></i> <%= tool %></li>
          <% }); %>
        </ul>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="section contact-section">
    <h2>Contact Me</h2>
    <p>If you’d like to discuss a project or just say hi, feel free to reach out!</p>
    <ul class="contact-links">
      <li>
        <a href="mailto:<%= data.personal.email %>" class="contact-link">
          <i class="fas fa-envelope"></i> Email
        </a>
      </li>
      <li>
        <a href="<%= data.contact.linkedin %>" target="_blank" class="contact-link">
          <i class="fab fa-linkedin"></i> LinkedIn
        </a>
      </li>
      <li>
        <a href="<%= data.contact.github %>" target="_blank" class="contact-link">
          <i class="fab fa-github"></i> GitHub
        </a>
      </li>
      <li>
        <a href="<%= data.contact.twitter %>" target="_blank" class="contact-link">
          <i class="fab fa-twitter"></i> Twitter
        </a>
      </li>
    </ul>
  </section>

  <%- include('partials/footer') %>
</body>
</html>
